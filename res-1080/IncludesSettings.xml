<?xml version="1.0" encoding="UTF-8"?>
<includes>

  <include name="Settings_Item">
    <top>12</top>
    <left>12</left>
    <width>260</width>
    <height>260</height>

    <control type="group">
      <bottom>60</bottom>

      <control type="image">
        <texture border="8" colordiffuse="Background_Primary">back-rounded-v.png</texture>
      </control>

      <control type="image">
        <centertop>50%</centertop>
        <centerleft>50%</centerleft>
        <width>120</width>
        <height>120</height>
        <texture>$INFO[ListItem.Icon]</texture>
      </control>
    </control>

    <control type="group">
      <bottom>0</bottom>
      <height>60</height>

      <control type="image">
        <texture border="8" colordiffuse="Background_Secondary" flipy="true">back-rounded-v.png</texture>
      </control>

      <control type="label">
        <top>8</top>
        <left>20</left>

        <label>$INFO[ListItem.Label]</label>
        <font>Common_ItemTitle_Uppercase</font>
        <textcolor>Text_Primary</textcolor>
      </control>
    </control>
  </include>

</includes>
